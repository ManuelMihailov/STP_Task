@model EmployeeEditViewModel
<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <h5>Edit Employee</h5>
            <form asp-action="EditEmployee" asp-controller="Employee">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" value="@Model.LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" value="@Model.Salary" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VacationDays" class="control-label"></label>
                    <input asp-for="VacationDays" class="form-control" value="@Model.VacationDays" />
                    <span asp-validation-for="VacationDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExperienceLevel" class="control-label"></label>
                    <select asp-for="ExperienceLevel" class="form-control" value="@Model.ExperienceLevel">
                        <option value="1">Junior</option>
                        <option value="2">Mid</option>
                        <option value="3">Senior</option>
                    </select>
                </div>
                <div hidden="hidden">
                    <input asp-for="Id" value="@Model.Id" type="number" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-outline-secondary">SaveChanges</button>
                </div>
            </form>
        </div>
    </div>
</div>