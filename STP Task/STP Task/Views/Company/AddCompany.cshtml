@model CompanyViewModel

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <h3>
                Add New Company
            </h3>
            <form class="form" role="form" method="post" asp-action="AddCompany" asp-controller="Company">
                <div class="form-group">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Enter Company Name">
                </div>
                <div class="form-group">
                    <label class="control-label">Creation Date</label>
                    <input type="datetime-local" class="form-control" asp-for="@Model.CreationDate">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>&nbsp;
                </div>
            </form>
        </div>
        <div class="col-4"></div>
    </div>
</div>