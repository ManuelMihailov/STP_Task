@model RegisterViewModel

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <h3>
                Account Registration
            </h3>
            <form class="form" role="form" method="post" asp-action="Register" asp-controller="Home">
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input type="text" class="form-control" asp-for="@Model.Username" oninput="checkIfFree(this.value)" placeholder="Enter Username">
                    <span id="username-validation" hidden="hidden" style="color: red;" class="text-danger">Username is already taken</span>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.Password" oninput="checkIfPassConfirmed()" id="password" placeholder="Enter Password">
                    <span id="password-length" hidden="hidden" style="color: red;" class="text-danger">Password must be at least 6 characters long</span>
                </div>
                <div class="form-group">
                    <label class="control-label">Confirm Password</label>
                    <input type="password" class="form-control" asp-for="@Model.ConfirmP" oninput="checkIfPassConfirmed()" id="password-confirm" placeholder="Enter Password again">
                    <span id="password-validation" hidden="hidden" style="color: red;" class="text-danger">Passwords do not match</span>
                </div>
                <div class="form-group">
                    <!-- Button -->
                    <button type="submit" class="btn btn-primary" id="register-button" disabled>Register</button>&nbsp;
                    <button type="reset" class="btn btn-primary btn-inverse">Reset</button>
                </div>
            </form>
            return to <a href="#" onclick="Login()">login</a>
        </div>
        <div class="col-4"></div>
    </div>
</div>

<script src="~/js/Register.js"></script>